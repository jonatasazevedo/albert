<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/quadrado_azul"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/azul_botao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:id="@+id/icone_materia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chapeu"
            app:layout_constraintBottom_toTopOf="@+id/txt_conteudo"
            app:layout_constraintEnd_toEndOf="@+id/quadrado_azul"
            app:layout_constraintStart_toStartOf="@+id/quadrado_azul"
            app:layout_constraintTop_toTopOf="@+id/quadrado_azul"></ImageView>

        <TextView
            android:id="@+id/txt_conteudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textColor="@color/preto"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quadrado_azul"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>